<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:text="Welcome to Toury"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >

    <Button
        android:id="@+id/loadTourBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
	    android:layout_margin="5dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/my_button"
        android:text="Load a Tour" />
    
    <Button
        android:id="@+id/createTourBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
    	android:paddingRight="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/my_button"
        android:text="Create Tour" />
    
<!--     <Button
	        android:id="@+id/syncTourBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Sync Tours" /> -->

    <TextView
        android:id="@+id/textViewCurrentTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    </LinearLayout>

</LinearLayout>
